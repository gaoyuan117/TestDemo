<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_item_nearby_avatar"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="16dp"
        android:src="@color/colorAccent" />

    <TextView
        android:id="@+id/tv_item_nearby_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/img_item_nearby_avatar"
        android:text="万事顺利"
        android:textColor="#000"
        android:textSize="16sp" />

    <ImageView
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_item_nearby_name"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/tv_item_nearby_name"
        android:src="@mipmap/boy" />

    <TextView
        android:id="@+id/tv_item_nearby_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_item_nearby_avatar"
        android:layout_marginBottom="3dp"
        android:layout_toRightOf="@+id/img_item_nearby_avatar"
        android:text="2公里内 - 济宁市"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/img_item_nearby_avatar"
        />

</RelativeLayout>
