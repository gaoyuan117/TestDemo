<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_adver_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_adver_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:text="2017-5-21" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_invited_detail_avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:src="@color/colorAccent" />

                <TextView
                    android:id="@+id/img_invited_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/img_invited_detail_avatar"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/img_invited_detail_avatar"
                    android:text="发起人：高原"
                    android:textColor="@color/zy_text_black" />

                <TextView
                    android:id="@+id/tv_invited_detail_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/img_invited_detail_avatar"
                    android:layout_marginBottom="4dp"
                    android:layout_toRightOf="@+id/img_invited_detail_avatar"
                    android:text="ID:7236"
                    android:textColor="@color/zy_text_gray"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="#D9D9D9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/zhuti"
                    android:drawablePadding="10dp"
                    android:text="主题："
                    android:textColor="@color/zy_text_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_invited_detail_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="玩游戏"
                    android:textColor="@color/zy_text_black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/renshu"
                    android:drawablePadding="10dp"
                    android:text="邀请人数："
                    android:textColor="@color/zy_text_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_invited_detail_nums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="@color/zy_text_blue"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人"
                    android:textColor="@color/zy_text_black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/jine"
                    android:drawablePadding="10dp"
                    android:text="邀请金额："
                    android:textColor="@color/zy_text_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_invited_detail_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:textColor="@color/zy_text_blue"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/zy_text_black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/shijian"
                    android:drawablePadding="10dp"
                    android:text="见面时间："
                    android:textColor="@color/zy_text_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_invited_detail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="2017-10-10 10:20"
                    android:textColor="@color/zy_text_gray"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/xiangying"
                    android:drawablePadding="10dp"
                    android:text="响应时间："
                    android:textColor="@color/zy_text_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_invited_detail_response"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2小时"
                    android:textColor="@color/zy_text_gray"
                    android:textSize="15sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/didian"
                    android:drawablePadding="10dp"
                    android:text="活动地点："
                    android:textColor="@color/zy_text_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_invited_detail_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="6"
                    android:text="山东 济宁 兖州"
                    android:textColor="@color/zy_text_gray"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingTop="2dp">

        <TextView
            android:id="@+id/tv_invited_detail_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="42dp"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/liaotian"
            android:text="聊天" />

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/tv_invited_detail_refuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/bt_jujue" />

        <ImageView
            android:id="@+id/tv_invited_detail_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/bt_jieshou" />

    </LinearLayout>

</RelativeLayout>
